            android:name="com.mupdf.activities.MainActivity"
            android:label="MuPsdReader" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mupdflib.liberary.MuPDFActivity"
            android:label="mupdflib"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.mupdflib.liberary.PrintDialogActivity"
            android:label="@string/print"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.mupdflib.liberary.PDFPreviewGridActivity"
            android:label="preview label"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.mupdf.activities.BookMarkList"
            android:label="@string/title_activity_book_mark_list" >
        </activity>
    </application>

</manifest>
